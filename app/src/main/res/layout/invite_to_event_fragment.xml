<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        style="@style/Theme.EvenTracker.DetailedEventHeader"
        android:gravity="center"
        android:id="@+id/detailed_name_eventTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="@string/invite_title"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:theme="@style/Theme.EvenTracker.EventCard"
        app:layout_constraintTop_toBottomOf="@+id/detailed_name_eventTV"
        android:id="@+id/DateTimeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="8dp">
        <ImageView
            android:id="@+id/icon_date"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_calendar_month_24"/>
        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/detailed_date_eventTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Дата"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/icon_date"
            app:layout_constraintBottom_toBottomOf="parent">
        </TextView>
        <ImageView
            android:id="@+id/icon_time"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/detailed_time_eventTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_access_time_24"
            android:layout_marginRight="8dp"/>
        <TextView
            android:id="@+id/detailed_time_eventTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Время"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        style="@style/Theme.EvenTracker.DetailedEventHeader"
        android:id="@+id/input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/DateTimeLayout"
        android:paddingLeft="50dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:hint="Name"
        tools:text="Имя человека"
        android:inputType="text"
        android:maxLines="1"
        android:lines="1"
        android:paddingBottom="10dp"/>

    <ImageView
        android:id="@+id/icon_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_baseline_search_24"
        app:layout_constraintBottom_toBottomOf="@+id/input_name"
        app:layout_constraintStart_toStartOf="@+id/input_name"
        app:layout_constraintTop_toBottomOf="@+id/DateTimeLayout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/names_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_name"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/name">
    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>
